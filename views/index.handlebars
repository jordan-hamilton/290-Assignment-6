<h1>Workout Tracker</h1>
<table id="workoutsTable">
  <thead>
    <th>Name</th>
    <th>Reps</th>
    <th>Weight</th>
    <th>Date</th>
  </thead>
  {{#if data}}
    <tbody>
      {{#each data}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.reps}}</td>
          <td>{{this.weight}} {{#if this.lbs}}lbs{{else}}kg{{/if}}</td>
          <td>{{this.date}}</td>
          <td>
            <form>
              <input type="submit" value="Update" class="workoutUpdate">
              <input type="submit" value="Delete" class="workoutDelete">
              <input type="hidden" value="{{this.id}}">
            </form>
          </td>
        </tr>
      {{/each}} </tbody>
  {{/if}}
</table>
<br />
<form id="workoutForm">
  <label>Name
    <input type="text" name="name" id="name" placeholder="Bench press" required>
  </label>
  <br />
  <label>Reps
    <input type="number" name="reps" id="reps" placeholder="12">
  </label>
  <br />
  <label>Weight
    <input type="number" name="weight" id="weight" placeholder="150">
  </label>
  <label>
    <select name="lbs">
      <option value="1" selected>lbs</option>
      <option value="0">kg</option>
    </select>
  </label>
  <br />
  <label>Date
    <input type="date" name="date" id="date">
  </label>
  <br />
  <input type="submit" value="Add this workout" id="workoutSubmit">
</form>
<script src="./script.js"></script>
